#!/bin/bash

source ./paths.sh

if [ -x trash ]; then
  trash $backupdir
else
  rm -rf $backupdir
fi

for i in "${paths[@]}"
do
  mkdir -p $(dirname "$i")
  cp -r $(realpath "$backupdir/$i") $(dirname "$i")
done

# create directories per ranger bookmarks
ranger_bookmarks="./files$HOME/.config/ranger/bookmarks"
cat "$ranger_bookmarks" | sed 's/^.://' | xargs -L1 mkdir -p
